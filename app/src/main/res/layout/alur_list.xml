<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <RelativeLayout
            style="@style/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:elevation="13dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/textViewNama"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/c" />

            <TextView
                android:id="@+id/textViewTipe"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/imageView"
                android:text="Kerja Praktek"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <Button
                android:id="@+id/textViewNama"
                style="@style/editButton2_style"
                android:layout_width="182dp"
                android:layout_height="67dp"
                android:layout_below="@id/textViewTipe"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-8dp"
                android:layout_marginEnd="60dp"
                android:layout_marginRight="60dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Surat Pengantar Kerja Kerja Kerja"
                android:textColor="#CC1E59"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>